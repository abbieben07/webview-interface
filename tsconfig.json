{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "sourceRoot": "../src",
        "baseUrl": ".",
        "outDir": "./plugin",
        "paths": {
            "tns-core-modules": [
                "./node_modules/@nativescript/core"
            ],
            "tns-core-modules/*": [
                "./node_modules/@nativescript/core/*"
            ],
            "@nativescript-community/plugin": [
                "src/plugin"
            ],
            "@nativescript-community/plugin/*": [
                "src/*"
            ],
            "*": [
                "node_modules/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "transform": "./node_modules/@nativescript/webpack/transformers/ns-transform-native-classes",
                "type": "raw"
            }
        ]
    },
    "include": [
        "src/**/*",
        "./references.d.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "src/angular",
        "demo-svelte",
        "demo-vue",
        "demo-ng",
        "demo-react"
    ],
    "compileOnSave": false,
}